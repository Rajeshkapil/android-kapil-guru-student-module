<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="yellow_button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black_2</item>
        <item name="android:backgroundTint">@color/gold</item>
    </style>

    <style name="white_button_blue_text">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/pink_2</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/blue_3</item>
    </style>

    <style name="best_trainer_style">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@color/red</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:text">@string/best_trainer</item>
        <item name="android:drawableStart">@drawable/ic_best_trainer</item>
    </style>

    <style name="CardViewTextHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/orange_2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue_3</item>
    </style>

    <style name="OnBoardingTotpText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--_new-->
    <style name="OnBoardingTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--_new-->
    <style name="OnBoardingSubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">13sp</item>
    </style>

    <declare-styleable name="earningsMergerView">
        <attr name="earnings_title" format="string"/>
        <attr name="earningsMergerView_earnings_amount" format="string"/>
        <!--        // 0 is for  Available Amount-->
        <!--        // 1 is for  Locked Amount-->
        <attr name="earnings_type" format="integer"/>

    </declare-styleable>

</resources>